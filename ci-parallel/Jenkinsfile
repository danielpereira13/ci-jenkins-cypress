                //         // http://localhost:8080/pipeline-syntax/globals#env
                //         echo "Projects Test 2 - Running build ${env.BUILD_ID} on ${env.JENKINS_URL}"
                //         sh 'hostname'
                //         // sh 'npm install'
                //         //sh 'npm run cy:verify'
                //         sh 'npm run e2e:smoketwo'

                //     }
                //     post{
